@using FA.Model
@model List<Grade>

<h2>List Grades</h2>
<a href="~/Grade/Create">Create grade</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>GradeId</th>
            <th>GradeName</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var grade in Model)
        {
            <tr>
                <td>@grade.Id</td>
                <td>@grade.Name</td>
                <td>
                    <a href="~/Grade/Edit/@grade.Id">Edit</a> | <a href="~/Grade/Delete/@grade.Id" onclick="return confirm('Do you want to delete this item')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>